# Kernel Configuration for Orange Pi 4B (RK3399)

# General Setup
CONFIG_ARM64=y
CONFIG_ARCH_ROCKCHIP=y
CONFIG_ARCH_RK3399=y

# CPU Power Management
CONFIG_CPU_FREQ=y
CONFIG_CPU_FREQ_GOV_PERFORMANCE=y
CONFIG_CPU_FREQ_GOV_SCHEDUTIL=y
CONFIG_ARM_ROCKCHIP_CPUFREQ=y
CONFIG_ROCKCHIP_MULTI_RGA=y

# Big.LITTLE Support
CONFIG_ARM_BIG_LITTLE_CPUIDLE=y
CONFIG_BIG_LITTLE=y
CONFIG_SCHED_MC=y
CONFIG_SCHED_SMT=y

# Memory Management
CONFIG_CMA=y
CONFIG_CMA_AREAS=7
CONFIG_TRANSPARENT_HUGEPAGE=y
CONFIG_NUMA=y
CONFIG_NUMA_BALANCING=y
CONFIG_ZSMALLOC=y

# GPU Support
CONFIG_DRM=y
CONFIG_DRM_ROCKCHIP=y
CONFIG_ROCKCHIP_MALI=y
CONFIG_MALI_MIDGARD=y
CONFIG_MALI_DEVFREQ=y

# NPU Support
CONFIG_ROCKCHIP_NPU=y
CONFIG_ROCKCHIP_NPU_DEBUG=y

# Video Processing
CONFIG_VIDEO_ROCKCHIP_ISP=y
CONFIG_VIDEO_ROCKCHIP_THUNDER_BOOT_ISP=y
CONFIG_VIDEO_ROCKCHIP_RGA=y

# USB Configuration
CONFIG_USB_XHCI_HCD=y
CONFIG_USB_EHCI_HCD=y
CONFIG_USB_OHCI_HCD=y
CONFIG_USB_DWC3=y
CONFIG_USB_STORAGE=y

# Network Configuration
CONFIG_BRIDGE=y
CONFIG_VLAN_8021Q=y
CONFIG_NETFILTER=y
CONFIG_IP_NF_IPTABLES=y

# File Systems
CONFIG_F2FS_FS=y
CONFIG_F2FS_STAT_FS=y
CONFIG_F2FS_FS_XATTR=y
CONFIG_F2FS_FS_SECURITY=y
CONFIG_F2FS_CHECK_FS=y

# Security Features
CONFIG_SECURITY=y
CONFIG_SECURITY_NETWORK=y
CONFIG_SECURITY_SELINUX=y
CONFIG_SECURITY_APPARMOR=y
CONFIG_CRYPTO_USER=y
CONFIG_CRYPTO_AES_ARM64_CE_CCM=y

# Thermal Management
CONFIG_THERMAL=y
CONFIG_ROCKCHIP_THERMAL=y
CONFIG_CPU_THERMAL=y

# Debug & Monitoring
CONFIG_FTRACE=y
CONFIG_FUNCTION_TRACER=y
CONFIG_STACK_TRACER=y
CONFIG_DYNAMIC_DEBUG=y

# Power Management
CONFIG_SUSPEND=y
CONFIG_SUSPEND_FREEZER=y
CONFIG_PM_RUNTIME=y
CONFIG_PM_ADVANCED_DEBUG=y

# Real-Time Support
CONFIG_PREEMPT_RT=y
CONFIG_HIGH_RES_TIMERS=y
CONFIG_NO_HZ_FULL=y

# IRQ Balancing
CONFIG_GENERIC_IRQ_MIGRATION=y
CONFIG_IRQ_DOMAIN=y
CONFIG_IRQ_DOMAIN_HIERARCHY=y
CONFIG_GENERIC_IRQ_MULTI_HANDLER=y